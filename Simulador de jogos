#include  <stdio.h>
#include <stdlib.h>
#define QT 6

  void introducao();
  void rodadas();
  void tabela();


  int main(){

    introducao();

    rodadas();

    tabela();

    }


    struct times
    {
    
      char time[QT][20];
      int pont[QT] , j[QT], v[QT], d[QT], e[QT]; 
      int gp[QT], gc[QT], sg[QT];
    };
    
    struct times dados;

    void introducao(){

      printf("Simulcao de um campeonato de futebol. Digite %d times que você deseja que participem da competição:\n", QT);

    for(int i = 0 ; i < QT ; i++)
      fgets(dados.time[i], 20 , stdin);
    }


    void rodadas(){ 

      printf("Partidas: ");      

      int g1, g2;

      for(int j = 0 ; j < QT ; j++){
        for(int i = 0 ; i < QT ; i++){
          if(i != j){
            printf("\n%s x \n%s\n", dados.time[j], dados.time[i]);
            printf("%s:", dados.time[j]);
            scanf("%d", &g1);
            printf("%s:", dados.time[i]);
            scanf("%d", &g2);

            dados.sg[j] = dados.sg[j] + g1 - g2;
            dados.sg[i] = dados.sg[i] + g2 - g1;

            dados.gp[j] = dados.gp[j] + g1;
            dados.gp[i] = dados.gp[i] + g2;

            dados.gc[j] = dados.gc[j] + g2;
            dados.gc[i] = dados.gc[i] + g1;

            dados.j[j]++;
            dados.j[i]++;            

          if( g1 > g2){
            dados.pont[j] = dados.pont[j] + 3;
            dados.v[j]++;
            dados.d[i]++;
          }
          else if ( g1 < g2){
            dados.pont[i] = dados.pont[i] + 3;
            dados.v[i]++;
            dados.d[j]++;
          }
          else if ( g1 == g2){
            dados.pont[j] = dados.pont[j] + 1;
            dados.pont[i] = dados.pont[i] + 1;
            dados.e[j] = dados.e[j]++;
            dados.e[i] = dados.e[i]++;
            }
          }
        }
      }
    }  


    void tabela(){

      int variavel;
      float pv[QT];
      int qj = (QT - 1) * 2;
      
      for(int i = 0 ; i < QT ; i++){
      
        variavel = 100*dados.v[i];
        pv[i] = variavel/qj;

        printf("\n\nTime: %s", dados.time[i]);
        printf("\nJogos: %d", dados.j[i]);
        printf("\nPontos: %d", dados.pont[i]);
        printf("\nVitorias: %d", dados.v[i]);
        printf("\nEmpates: %d", dados.e[i]);
        printf("\nDerrotas: %d", dados.d[i]);
        printf("\nGols pro: %d", dados.gp[i]);
        printf("\nGols contra: %d", dados.gc[i]);
        printf("\nSaldo de gols: %d", dados.sg[i]);       
        printf("\nPorcentagem de vitorias: %.f", pv[i]);
      }
    }
